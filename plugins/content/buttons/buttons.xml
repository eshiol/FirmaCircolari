  <version>3.6.13.544</version>
  <description>PLG_CONTENT_BUTTONS_XML_DESCRIPTION</description>
  <scriptfile>enable.php</scriptfile>
  <updateservers>
    <server type="extension" priority="2" name="Buttons">https://www.eshiol.it/files/buttons/buttons.xml</server>
  </updateservers>
  <files>
    <filename plugin="buttons">buttons.php</filename>
    <folder>forms</folder>
    <folder>tmpl</folder>
  </files>
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_content_buttons.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_content_buttons.sys.ini</language>
    <language tag="it-IT">it-IT/it-IT.plg_content_buttons.ini</language>
    <language tag="it-IT">it-IT/it-IT.plg_content_buttons.sys.ini</language>
  </languages>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="show_categoryblog" type="radio" default="0" class="btn-group btn-group-yesno" description="PLG_CONTENT_BUTTONS_FIELD_SHOWCATEGORYBLOG_DESC" label="PLG_CONTENT_BUTTONS_FIELD_SHOWCATEGORYBLOG_LABEL">
          <option value="1">JYES
					</option>
          <option value="0">JNO
					</option>
        </field>
        <field name="show_featured" type="radio" default="0" class="btn-group btn-group-yesno" description="PLG_CONTENT_BUTTONS_FIELD_SHOWFEATURED_DESC" label="PLG_CONTENT_BUTTONS_FIELD_SHOWFEATURED_LABEL">
          <option value="1">JYES
					</option>
          <option value="0">JNO
					</option>
        </field>
      </fieldset>
      <fieldset name="debug" label="PLG_CONTENT_BUTTONS_DEBUG_FIELDSET_LABEL">
        <field name="debug" type="radio" default="0" class="btn-group btn-group-yesno" description="PLG_CONTENT_BUTTONS_DEBUG_SYSTEM_DESC" label="PLG_CONTENT_BUTTONS_DEBUG_SYSTEM_LABEL">
          <option value="1">JYES
					</option>
          <option value="0">JNOÃ¹
					</option>
        </field>
        <field name="log" type="text" description="PLG_CONTENT_BUTTONS_DEBUG_FILENAME_DESC" label="PLG_CONTENT_BUTTONS_DEBUG_FILENAME_LABEL" default="eshiol.log.php" showon="debug:1"/>
        <field name="phpconsole" type="radio" class="btn-group btn-group-yesno" default="0" description="PLG_CONTENT_BUTTONS_DEBUG_PHPCONSOLE_DESC" label="PLG_CONTENT_BUTTONS_DEBUG_PHPCONSOLE_LABEL">
          <option value="1">JYES
					</option>
          <option value="0">JNO
					</option>
